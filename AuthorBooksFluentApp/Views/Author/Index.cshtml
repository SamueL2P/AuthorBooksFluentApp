            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorDetail.Street)

            </td><td>
                @Html.DisplayFor(modelItem => item.AuthorDetail.City)

            </td><td>
                @Html.DisplayFor(modelItem => item.AuthorDetail.State)

            </td><td>
                @Html.DisplayFor(modelItem => item.AuthorDetail.Country)

            </td>
            <td>
                @Html.ActionLink("Book Details", "BookDetails", "Book", new { authId = item.Id }, null)

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
