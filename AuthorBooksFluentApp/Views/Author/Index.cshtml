@model IEnumerable<AuthorBooksFluentApp.Models.Author>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorDetail.Street)
            </th><th>
                @Html.DisplayNameFor(model => model.AuthorDetail.City)
            </th><th>
                @Html.DisplayNameFor(model => model.AuthorDetail.State)
            </th><th>
