@model AuthorBooksFluentApp.Models.Author

<div class="container mx-auto p-6 mt-4 bg-white rounded shadow-lg">
    <h2 class="text-2xl font-bold mb-4">Author Details</h2>

    <p><strong>Name:</strong> <span class="text-gray-700">@Model.Name</span></p>
    <p><strong>Username:</strong> <span class="text-gray-700">@Model.UserName</span></p>
    <p><strong>Email:</strong> <span class="text-gray-700">@Model.Email</span></p>
    <p><strong>Age:</strong> <span class="text-gray-700">@Model.Age</span></p>

    <div class="mt-4">
        <h2><strong>Address Details : </strong></h2>
        <br />
        <p><strong>Street:</strong> <span class="text-gray-700">@Model.AuthorDetail.Street</span></p>
        <p><strong>City:</strong> <span class="text-gray-700">@Model.AuthorDetail.City</span></p>
        <p><strong>State:</strong> <span class="text-gray-700">@Model.AuthorDetail.State</span></p>
        <p><strong>Country:</strong> <span class="text-gray-700">@Model.AuthorDetail.Country</span></p>
    </div>

    <div class="mt-6 space-x-4">
        @Html.ActionLink("Edit Author Details", "Edit", new { id = Model.Id }, new { @class = "text-blue-600 hover:text-blue-800 font-semibold" })
        @Html.Raw("|")
        @Html.ActionLink("Delete Author Details", "Delete", new { id = Model.Id }, new { @class = "text-red-600 hover:text-red-800 font-semibold" })
        @Html.Raw("|")
        @Html.ActionLink("Book Details", "BookDetails", "Book", new { authId = Model.Id }, new { @class = "text-green-600 hover:text-green-800 font-semibold" })
    </div>
</div>
